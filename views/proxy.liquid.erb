<hr>

  {% if customer %}
    <script>
      var customer_cookie_name =  "{{ shop.permanent_domain }}" +"_signed_in";
      var first_order_cookie_name =  "{{ shop.permanent_domain }}" +"_placed_first_order";
      var customer_first_name = "{{ customer.first_name }}"
      var customer_first_name_cookie_name =  "{{ shop.permanent_domain }}" + "_customer_name"
      sessionStorage.setItem(customer_cookie_name, "true");

      var o_count = {{customer.orders_count }};
      if (o_count < 1) {
        localStorage.setItem(first_order_cookie_name, "false");
        localStorage.setItem(customer_first_name_cookie_name, customer_first_name);
        console.log(" new customer " + customer_first_name);
      }
      else {
        // put a cookie so we won't display.
        console.log(" old customer " + customer_first_name);
        localStorage.setItem(first_order_cookie_name, "true");
      }
    </script>
  {% else %}
    <script>
      var customer_cookie_name =  "{{ shop.permanent_domain }}" +"_signed_in";
      sessionStorage.setItem(customer_cookie_name, "false");
    </script>
    
  {% endif %}


